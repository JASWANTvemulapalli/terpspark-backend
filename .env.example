# Application Settings
APP_NAME=TerpSpark
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://terpspark_user:terpspark_pass@localhost:5432/terpspark_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration - SendGrid API
# EMAIL_MODE: Use "mock" for development (prints to console), "sendgrid" for production (sends real emails)
EMAIL_MODE=mock
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=terpspark.events@gmail.com
EMAIL_FROM_NAME=TerpSpark

# Rate Limiting
RATE_LIMIT_LOGIN=5/15minutes
RATE_LIMIT_REGISTRATION=10/hour
RATE_LIMIT_ANNOUNCEMENTS=10/day
RATE_LIMIT_API=100/minute
RATE_LIMIT_EXPORT=5/hour

# File Upload (for future phases)
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp
UPLOAD_DIR=./uploads
CDN_URL=https://cdn.terpspark.umd.edu

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/terpspark.log
